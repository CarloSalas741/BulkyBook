@model CoverType

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover Type</h2>
        </div>

        <div class="row mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 150px">Edit</button>
        <a asp-controller="CoverType" asp-action="index" class="btn btn-secondary" style="width: 150px">Go Back</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}